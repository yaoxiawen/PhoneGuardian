<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_cacheicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_cachename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_toRightOf="@id/iv_cacheicon"
        android:layout_toLeftOf="@id/iv_status"
        android:textColor="#000000"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="程序名字"/>

    <TextView
        android:id="@+id/tv_cachesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cachename"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/iv_cacheicon"
        android:layout_toLeftOf="@id/iv_status"
        android:layout_marginBottom="3dip"
        android:textColor="#88000000"
        android:textSize="14sp"
        android:text="缓存大小"/>

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/list_button_clean_default"/>
</RelativeLayout>