<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_taskicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_marginRight="5dip"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_taskname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_toRightOf="@id/iv_taskicon"
        android:layout_toLeftOf="@id/tv_appsize"
        android:textColor="#000000"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="进程名字"/>

    <TextView
        android:id="@+id/tv_ramsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_taskname"
        android:layout_marginTop="3dip"
        android:layout_toRightOf="@id/iv_taskicon"
        android:layout_marginBottom="3dip"
        android:textColor="#88000000"
        android:textSize="14sp"
        android:text="内存占用："/>
    <CheckBox
        android:id="@+id/cb_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginRight="5dp" />

</RelativeLayout>